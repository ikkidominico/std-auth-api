generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://std-auth-user:std-auth-password@localhost:5432/std-auth-db?schema=public"
}

model User {
  id      String    @id
  email   String    @unique
  login   Login[]
  profile Profile[]
}

model Login {
  method   String
  password String?
  user     User    @relation(fields: [userId], references: [id])
  userId   String  @id

  @@unique([userId, method])
}

model Profile {
  name   String
  birth  DateTime
  user   User     @relation(fields: [userId], references: [id])
  userId String   @id
}
